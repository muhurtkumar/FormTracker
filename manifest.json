{
    "manifest_version": 3,
    "name": "FormTracker",
    "description": "Track Google Forms submissions and save them to Google Sheets",
    "version": "1.0",

    "permissions": [
        "storage",
        "scripting",
        "identity"
    ],

    "host_permissions": [
        "https://docs.google.com/forms/*"
    ],

    "background": {
        "service_worker": "background.js"
    },

    "content_scripts": [
        {
            "matches": ["https://docs.google.com/forms/*"],
            "js": ["content.js"]
        }
    ],

    "action": {
        "default_popup": "popup.html"
    }
}